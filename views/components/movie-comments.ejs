<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <div class="ui segment">
      <div class="ui minimal comments">
        <h3 class="ui dividing header">留言</h3>

        <% moviecomments.forEach(function (moviecomment) { %>
        <div class="comment">
            <span class="avatar">
              <img src="/img/<%= moviecomment.author.avatar %>">
            </span>
          <div class="content">
            <a class="author" href="/posts?author=<%= moviecomment.author._id %>"><%= moviecomment.author.name %></a>
            <div class="metadata">
              <span class="date"><%= moviecomment.created_at %></span>
            </div>
            <div class="text"><%- moviecomment.content %></div>

            <% if (user && moviecomment.author._id && user._id.toString() === moviecomment.author._id.toString()) { %>
            <div class="actions">
              <a class="reply" href="/moviecomments/<%= moviecomment._id %>/remove">删除</a>
            </div>
            <% } %>
          </div>
        </div>
        <% }) %>

        <% if (user) { %>
        <form class="ui reply form" method="post" action="/moviecomments">
          <input name="movieId" value="<%= movie._id %>" hidden>
          <div class="field">
            <textarea name="content"></textarea>
          </div>
          <input type="submit" class="ui icon button" value="留言"/>
        </form>
        <% } %>

      </div>
    </div>
  </div>
</div>
